{
  "name": "@cross-ui/react",
  "version": "0.0.1-alpha.3",
  "description": "Wrapper of @cross-ui/core for React projects",
  "author": "dimaslz <me@dimaslz.io>",
  "license": "MIT",
  "repository": "git@github.com:dimaslz/cross-ui-react.git",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "yarn --cwd playground install && NODE_ENV=production yarn --cwd playground build",
    "deploy": "gh-pages -d playground/build",
    "install-all": "yarn install && yarn --cwd playground install",
    "release": "release-it"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@release-it/bumper": "^2.0.0",
    "autoprefixer": "^9",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "husky": "^6.0.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^4.0.3",
    "release-it": "^14.9.0",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@cross-ui/core": "^0.0.1-alpha.3"
  },
  "private": false
}
